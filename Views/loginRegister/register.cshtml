@model triviaWebASPNET.ViewModels.LoginRegisterModel


@{
    ViewData["Title"] = "[TRIVE]";
}



<link rel="stylesheet" href="~/css/loginRegister.css">


@{
    if (Model != null)
    {
        <h3>@Model.errorMessage</h3>
    }
}

<div id="divBackButton">
    <a href="/">
        <button id="backBut">←</button>
    </a>
    <h1 id="nadpisText">Register Page</h1>
</div>


<form action="/register" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" class="inputFormy" required>
    </div>
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="inputFormy" required>
    </div>
    <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="inputFormy" autocomplete="off" required>
    </div>
    <button type="submit" id="submitButton">Register</button>
</form>
<a href="/login" id="toOtherPage">→ Login Page</a>